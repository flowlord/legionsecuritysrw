{
    "manifest_version": 3,
    "name": "LEGION SECURITY SRW",
    "version": "1.0",
    "description": "Extension chrome qui avertie l'utilisateur si un site web est frauduleux ou qui a des avis n√©gatifs sur Trustpilot.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  